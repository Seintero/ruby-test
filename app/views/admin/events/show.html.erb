<div class="row justify-content-center pt-5">
  <div class="col-md-8">
    <div class="card">
      <header class="card-header">
        Просмотр события
      </header>
      <div class="card-body">
        <% if @event.image.attached? %>
          <div class="col-md-6 ">
            <%= image_tag @event.image.variant(combine_options: {gravity: 'Center', crop: '540x400+0+0'}), class: "img-retina img-fluid" %>
          </div>
          <hr>
        <% end %>
        <b>Наименование:</b> <span><%= @event.title %></span>
        <hr>
        <b>Город:</b><span><%= @event.city %></span>
        <hr>
        <b>Расположение:</b><span><%= @event.location %></span>
        <hr>
        <b>Дата:</b><span><%= @event.event_date.strftime("%d.%m.%Y") %></span>
        <hr>
        <b>Время:</b><span> <%= @event.event_date.strftime("%k:%M") %></span>
        <hr>
        <b>Организатор:</b><span> <%= @event.organizer.name %></span>
        <hr>
        <b>Url:</b><span> <%= link_to 'Ссылка на мероприятие',  @event.link %></span>
        <% unless @event.description == nil %>
          <hr>
          <div class="event-description pt-5 pb-5">
            <%= @event.description.html_safe  %>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to admin_events_path, class: 'btn btn-outline-success mt-2 mb-2' do %>
      Назад к событиям
    <% end %>
  </div>
</div>